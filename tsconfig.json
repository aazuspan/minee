{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es6",
        "moduleResolution": "node",
        "allowJs": false,
        "strict": true,
        "alwaysStrict": true,
        "noEmitOnError": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,

    },
    "include": [
        "./src/**/*",
        "./index.d.ts"
    ]
}